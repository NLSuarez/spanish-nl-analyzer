<Window x:Class="spanish_nl_analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spanish_nl_analyzer"
        mc:Ignorable="d"
        Title="Spanish Word Frequency Analyzer" Height="450" Width="800" Background="#FFFDFCFC">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open File" Click="file_browse_Click"/>
                    <MenuItem x:Name="exit_menu" Header="_Exit" Click="exit_menu_Click" />
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <TextBox x:Name="file_contents" HorizontalAlignment="Left" Height="143" TextWrapping="Wrap" Text="File Path" VerticalAlignment="Top" Width="700" Margin="50,88,0,0"/>
        <Label x:Name="welcome_header" Content="Welcome!" HorizontalAlignment="Left" Height="29" Margin="357,30,0,0" VerticalAlignment="Top" Width="86" FontSize="16" FontWeight="Bold"/>
        <TextBlock x:Name="results_box" HorizontalAlignment="Left" Height="145" Margin="50,236,0,0" TextWrapping="Wrap" Text="Results:" VerticalAlignment="Top" Width="700"/>
    </Grid>
</Window>
